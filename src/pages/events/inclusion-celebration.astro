---
import Layout from '../../layouts/Layout.astro';

const title = 'The Intentional Inclusion Celebration';
const description = 'A family-friendly festival celebrating inclusion for People of Determination, the chronically ill, cancer survivors, and those with mental health challenges. 3rd December 2026, Dubai.';
---

<Layout title={title} description={description}>
  <div class="event-hero">
    <div class="event-hero-content">
      <span class="event-date-badge">3rd December 2026</span>
      <h1>The Intentional<br>Inclusion Celebration</h1>
      <p class="event-tagline">A Festival to Celebrate Life</p>
    </div>
  </div>

  <div class="countdown-bar" id="countdown">
    <div class="countdown-units">
      <div class="countdown-unit">
        <span class="countdown-number" id="cd-days">--</span>
        <span class="countdown-label">Days</span>
      </div>
      <div class="countdown-unit">
        <span class="countdown-number" id="cd-hours">--</span>
        <span class="countdown-label">Hours</span>
      </div>
      <div class="countdown-unit">
        <span class="countdown-number" id="cd-mins">--</span>
        <span class="countdown-label">Minutes</span>
      </div>
      <div class="countdown-unit">
        <span class="countdown-number" id="cd-secs">--</span>
        <span class="countdown-label">Seconds</span>
      </div>
    </div>
  </div>

  <script is:inline>
    document.addEventListener('astro:page-load', function() {
      var target = new Date('2026-12-03T12:00:00+04:00').getTime();
      var days = document.getElementById('cd-days');
      var hours = document.getElementById('cd-hours');
      var mins = document.getElementById('cd-mins');
      var secs = document.getElementById('cd-secs');
      if (!days) return;

      function update() {
        var diff = target - Date.now();
        if (diff <= 0) {
          days.textContent = '0';
          hours.textContent = '0';
          mins.textContent = '0';
          secs.textContent = '0';
          return;
        }
        days.textContent = Math.floor(diff / 86400000);
        hours.textContent = Math.floor((diff % 86400000) / 3600000);
        mins.textContent = Math.floor((diff % 3600000) / 60000);
        secs.textContent = Math.floor((diff % 60000) / 1000);
      }

      update();
      setInterval(update, 1000);
    });
  </script>

  <section class="event-section" id="main-content">
    <div class="container">
      <div class="event-intro animate-on-scroll">
        <p class="lead">
          A family-friendly festival celebrating inclusion for <strong>People of Determination</strong>,
          the <strong>chronically ill</strong>, <strong>cancer survivors</strong>, and those living with
          <strong>mental health challenges</strong>. Everyone is welcome - come together, celebrate life,
          and show that our community is stronger when it includes everyone.
        </p>
      </div>

      <div class="event-details-grid">
        <div class="event-detail-card animate-on-scroll stagger-1">
          <h3>When</h3>
          <p>3rd December 2026</p>
          <span class="event-note">International Day of Persons with Disabilities</span>
        </div>

        <div class="event-detail-card animate-on-scroll stagger-2">
          <h3>Where</h3>
          <p>Outdoor Venue, Dubai</p>
          <span class="event-note">Location to be confirmed</span>
        </div>

        <div class="event-detail-card animate-on-scroll stagger-3">
          <h3>Who</h3>
          <p>Everyone is Welcome</p>
          <span class="event-note">Family-friendly &amp; fully accessible</span>
        </div>
      </div>

      <div class="event-activities animate-on-scroll">
        <h2>What to Expect</h2>
        <div class="activities-grid">
          <div class="activity-item">
            <h4>Stalls &amp; Vendors</h4>
            <p>Browse community stalls, local businesses, and food vendors in a vibrant outdoor market.</p>
          </div>
          <div class="activity-item">
            <h4>Fun Activities</h4>
            <p>Inclusive games, creative workshops, and hands-on activities for all ages and abilities.</p>
          </div>
          <div class="activity-item">
            <h4>Art Exhibits</h4>
            <p>Showcasing works by talented artists from the community, celebrating creativity and expression.</p>
          </div>
          <div class="activity-item">
            <h4>Live Demonstrations</h4>
            <p>Interactive demonstrations highlighting innovation, adaptive technology, and community initiatives.</p>
          </div>
          <div class="activity-item">
            <h4>Stage Entertainment</h4>
            <p>Live music, performances, and speakers throughout the day on the main stage.</p>
          </div>
          <div class="activity-item">
            <h4>Community Spirit</h4>
            <p>A space to connect, share stories, and celebrate the strength of an inclusive community.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="event-cta animate-on-scroll">
    <div class="container">
      <h2>Get Involved</h2>
      <p>Whether you'd like to attend, volunteer, sponsor, or host a stall - we'd love to hear from you.</p>
      <div class="event-contact-options">
        <a href="mailto:info@intentional.ae" class="btn btn-primary">Email info@intentional.ae</a>
        <a href="https://wa.me/971504519627" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">WhatsApp Charlie</a>
      </div>
      <p class="event-phone">Charlie: <a href="tel:+971504519627">+971 50 451 9627</a></p>
    </div>
  </section>
</Layout>
